#!/usr/bin/python3
import ldap

LDAP_PROVIDER_URL = 'ldap://yourldapdomain.com:port/'
BASE_DN = 'ou=people,dc=yourldapdomain,dc=com'

def authenticate(login, password):
    user_dn = f'cn={login},{BASE_DN}'
    connect = ldap.initialize(LDAP_PROVIDER_URL)
    try:
        connect.simple_bind_s(user_dn, password)
        connect.unbind_s()
        return True
    except Exception as e:
        print(e)
        connect.unbind_s()
        return False
